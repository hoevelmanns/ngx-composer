{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["es2019"],
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "utils": ["src/utils"],
            "context": ["src/context"],
            "targets": ["src/targets"],
            "commands": ["src/commands"],
            "tree": ["src/tree"],
            "tools": ["src/tools"],
            "shell": ["src/shell"]
        }
    }
}
